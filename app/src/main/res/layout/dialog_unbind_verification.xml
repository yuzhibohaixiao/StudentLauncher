<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/launcher_white_round_rectangle_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gray_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="输入验证码"
        android:textColor="@color/verify_text_selector"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_close_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/gray_close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="23dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/launcher_verification_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="#4385D9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/launcher_verification_bg"
            android:gravity="center"
            android:textColor="#4385D9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/launcher_verification_bg"
            android:gravity="center"
            android:textColor="#4385D9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/launcher_verification_bg"
            android:gravity="center"
            android:textColor="#4385D9"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145.5dp"
        android:background="@color/gray_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5.5dp"
            android:paddingTop="5.5dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5.5dp"
            android:paddingTop="5.5dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5.5dp"
            android:paddingTop="5.5dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="158dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginStart="5dp"
                android:background="@drawable/unbind_verification_btn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:text="x"
                android:textColor="@color/verify_text_selector"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
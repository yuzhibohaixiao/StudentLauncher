<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:layout_marginBottom="18dp"
    android:background="@drawable/update_item_bg"
    android:orientation="vertical"
    android:paddingStart="18.5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/iv_app_icon_update_item"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_app_name_update_item"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:ems="8"
            android:singleLine="true"
            android:text="深光智能交互系统"
            android:textColor="@color/person_center_text_green"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="66dp"
            android:layout_height="22.5dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="16dp">

            <ProgressBar
                android:id="@+id/pb_update_item"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="66dp"
                android:layout_height="22.5dp"
                android:max="100"
                android:progressDrawable="@drawable/pb_update_bg"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_update_item"
                android:layout_width="66dp"
                android:layout_height="22.5dp"
                android:background="@drawable/update_oval_trans20"
                android:gravity="center"
                android:text="更新"
                android:textColor="@color/person_center_text_green"
                android:textSize="12sp" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_app_size_update_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66.5dp"
        android:textColor="@color/person_center_text_green"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_app_code_update_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.5dp"
        android:layout_marginEnd="5dp"
        android:singleLine="true"
        android:textColor="@color/person_center_text_green"
        android:textSize="10sp" />


</FrameLayout>
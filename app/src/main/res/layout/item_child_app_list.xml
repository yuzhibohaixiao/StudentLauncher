<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="358px"
    android:minHeight="358px">

    <LinearLayout
        android:layout_width="378px"
        android:minWidth="378px"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="180px"
            android:layout_height="180px"
            android:minWidth="180px"
            android:minHeight="180px"
            android:background="@drawable/white_bg_12oval">

            <ImageView
                android:id="@+id/iv_icon_app_list"
                android:layout_width="155px"
                android:layout_height="155px"
                android:minWidth="155px"
                android:minHeight="155px"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/default_icon_child_launcher" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="76dp"
            android:layout_height="24.5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg_12oval"
            android:gravity="center"
            android:singleLine="true"
            android:text="深光科技"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="378px"
        android:layout_height="284px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="35dp"
        android:minWidth="378px"
        android:minHeight="284px"
        android:src="@drawable/child_app_bottom" />
</FrameLayout>
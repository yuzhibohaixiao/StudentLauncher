<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="75dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_right_launcher_item1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="8.5dp"
        android:src="@drawable/launcher_small_video" />

    <ImageView
        android:id="@+id/iv_right_launcher_item2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8.5dp"
        android:layout_toEndOf="@id/iv_right_launcher_item1"
        android:src="@drawable/launcher_small_video" />

    <LinearLayout
        android:id="@+id/ll_right_app_name_item"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:background="@drawable/launcher_right_bottom_item"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_right_app_name_item1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_right_launcher_item1"
            android:layout_alignStart="@id/iv_right_launcher_item1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="精选素养视频"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_right_app_name_item2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_right_launcher_item2"
            android:layout_alignStart="@id/iv_right_launcher_item2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="精选阅读"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_app_name_item3"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:background="@drawable/launcher_right_bottom_item_small"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_right_app_name_item3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_right_launcher_item1"
            android:layout_alignStart="@id/iv_right_launcher_item1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="精选素养视频"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_icon_family_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/father" />

    <TextView
        android:id="@+id/tv_name_family_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23.5dp"
        android:text="张小诚"
        android:textColor="@color/person_center_text_black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_online_state_family_item"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/online_state_gray"
        android:textSize="12sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg">

    <LinearLayout
        android:id="@+id/ll_back_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/launcher_personal_center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/launcher_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_exit_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/launcher_personal_center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/launcher_user_exit" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="667dp"
        android:layout_height="342dp"
        android:layout_marginStart="146.5dp"
        android:layout_marginTop="111.5dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="342dp"
            android:background="@drawable/launcher_personal_center_rounded_rectangle"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="我的信息"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="23dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_boy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="张小诚"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="一年级"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/boy"
                android:drawablePadding="8dp"
                android:text="男孩"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_gravity="end"
            android:background="@drawable/launcher_personal_center_rounded_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="家庭信息"
                android:textColor="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="23dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="145dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/launcher_personal_center_rounded_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="系统设置"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_focus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle"
                    android:drawableTop="@drawable/light_machine_focus"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="14.5dp"
                    android:text="光机对焦"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_wifi"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle"
                    android:drawableTop="@drawable/wifi"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="14.5dp"
                    android:text="Wifi"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle"
                    android:drawableTop="@drawable/setting"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="14.5dp"
                    android:text="系统设置"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_splash"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle"
                    android:drawableTop="@drawable/splash"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="14.5dp"
                    android:text="用户引导"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
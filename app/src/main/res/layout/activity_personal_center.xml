<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg">

    <LinearLayout
        android:id="@+id/ll_back_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/launcher_personal_center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/launcher_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_exit_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/launcher_personal_center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/launcher_user_exit" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:text="切换用户"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="111.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="342dp"
            android:background="@drawable/launcher_personal_center_rounded_rectangle"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="我的信息"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_icon_personal_center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/splash_boy" />

            <TextView
                android:id="@+id/tv_name_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="张小诚"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_grade_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="一年级"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gender_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/boy"
                android:drawablePadding="8dp"
                android:text="男孩"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp">

            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="180dp"
                android:layout_gravity="end"
                android:background="@drawable/launcher_personal_center_rounded_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="家庭信息"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_family_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="51.5dp"
                    android:clipToPadding="false"
                    android:paddingStart="26dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="145dp"
                android:layout_gravity="bottom"
                android:background="@drawable/launcher_personal_center_rounded_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="系统设置"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/launcher_personal_center_rounded_rectangle"
                        android:drawableTop="@drawable/camera_calibration"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14.5dp"
                        android:text="镜头校准"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/launcher_personal_center_rounded_rectangle"
                        android:drawableTop="@drawable/wifi"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14.5dp"
                        android:text="Wifi"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_set"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/launcher_personal_center_rounded_rectangle"
                        android:drawableTop="@drawable/setting"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14.5dp"
                        android:text="系统设置"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_splash"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/launcher_personal_center_rounded_rectangle"
                        android:drawableTop="@drawable/splash"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14.5dp"
                        android:text="用户引导"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="342dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/launcher_personal_center_rounded_rectangle"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="控制中心"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/launcher_personal_center_rounded_rectangle_right">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/launcher_personal_center_rounded_rectangle_right">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle_right"
                    android:drawableTop="@drawable/auto_focus"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="14dp"
                    android:text="对焦"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/launcher_personal_center_rounded_rectangle_right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pen_touch"
                        android:layout_width="69.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/touch_mode_selector"
                        android:drawableTop="@drawable/pen_touch"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14dp"
                        android:text="笔触"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_hand_touch"
                        android:layout_width="69.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/touch_mode_selector"
                        android:drawableTop="@drawable/hand_touch"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="14dp"
                        android:text="手触"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_exit_personal_center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/launcher_personal_center_rounded_rectangle_right"
                android:drawableTop="@drawable/launcher_user_exit"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:paddingTop="14dp"
                android:text="切换用户"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
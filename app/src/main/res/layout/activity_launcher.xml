                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_blue_top_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_fun_card_launcher"
                android:layout_width="113dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_blue_bottom_small"
                android:paddingStart="34dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wrong_topic_launcher"
                android:layout_width="146dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_blue_bottom_big"
                android:paddingStart="43dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ar_launcher3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="48dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_kspg_launcher"
                android:layout_width="142.5dp"
                android:layout_height="67.5dp"
                android:background="@drawable/btn_oral_arithmetic_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ywzwpg_launcher"
                android:layout_width="142.5dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_chinese_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_yyzwpg_launcher"
                android:layout_width="142.5dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_english_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_favorite_launcher"
                android:layout_width="142.5dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_collect_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="27.5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@drawable/launcher_study_plan"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_av_launcher"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@drawable/launcher_av"
            android:visibility="gone" />

        <ImageView
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@drawable/launcher_call_parent"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_az_store"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@drawable/launcher_app_store_bottom"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_all_app_launcher"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@drawable/launcher_all_app"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23.5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/top_ip_img" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="37.5dp"
            android:layout_marginStart="14.5dp"
            android:layout_marginBottom="24.5dp"
            android:background="@drawable/new_launcher_top_text_bg"
            android:gravity="center"
            android:text="今天有10项学习计划，已完成3/10项目，加油哟!"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="214dp"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/task"
            android:drawablePadding="3dp"
            android:text="任务挑战"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="93.5dp"
            android:layout_height="28dp"
            android:layout_marginStart="31.5dp"
            android:background="@drawable/white_bg_oval"
            android:gravity="center"
            android:text="一年级上"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="27.5dp"
            android:layout_marginTop="27.5dp"
            android:src="@drawable/splash_boy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.5dp"
            android:text="深小光"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86.5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_width="157.5dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/launcher_left_bg"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_ar_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AR学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_chinese_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="语文"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_mathematics_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_english_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="英语"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_quality_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="素质拓展"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ar_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ar_launcher_left"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_chinese_launcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chinese_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_mathematics_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mathematics_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_english_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="205dp"
                android:scaleType="centerCrop"
                android:src="@drawable/english_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_quality_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="275dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quality_development_launcher_left"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_center_launcher"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/launcher_syn_learn_bg">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_center_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="70dp" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_right_launcher"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginStart="45.5dp"
            android:background="@drawable/launcher_instruction_after_class_bg">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_right_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="63dp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_ar_launcher1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="33dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_purple_top_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="查单词"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_top_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="查单词"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_bottom_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="翻译"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_bottom_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="求助"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_ip_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="91.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ip_img"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_ar_launcher2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_top_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="答题"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_blue_top_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text="书本指读"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_blue_bottom_small"
                android:paddingStart="34dp"
                android:paddingTop="12.5dp"
                android:text="趣味卡牌"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_blue_bottom_big"
                android:paddingStart="43dp"
                android:paddingTop="12.5dp"
                android:text="错题本"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ar_launcher3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="38dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text="口算批改"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_red_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text="语文作文批改"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_red_ar"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text="英语作文批改"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_red_normal"
                android:paddingStart="19.5dp"
                android:paddingTop="12.5dp"
                android:text="收藏夹"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/launcher_bottom_bg"
            android:drawablePadding="7dp"
            android:gravity="center_horizontal"
            android:text="学习计划"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/launcher_bottom_bg"
            android:drawablePadding="7dp"
            android:gravity="center_horizontal"
            android:text="音视频类"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/launcher_bottom_bg"
            android:drawablePadding="7dp"
            android:gravity="center_horizontal"
            android:text="呼叫家长"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/launcher_bottom_bg"
            android:drawablePadding="7dp"
            android:gravity="center_horizontal"
            android:text="应用市场"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/launcher_bottom_bg"
            android:drawablePadding="7dp"
            android:gravity="center_horizontal"
            android:text="全部应用"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>
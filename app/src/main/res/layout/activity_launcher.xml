            <ImageView
                android:id="@+id/iv_quality_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="275dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quality_development_launcher_left"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_center_launcher"
            android:layout_width="424dp"
            android:layout_height="365dp"
            android:layout_marginStart="28dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_center_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="70dp"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@color/launcher_scroll_bg"
                android:scrollbars="vertical" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_right_launcher"
            android:layout_width="195.5dp"
            android:layout_height="365dp"
            android:layout_marginStart="55.5dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_right_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="63dp" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quality_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_ar_launcher1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="43dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_cdc_launcher"
                android:layout_width="148.5dp"
                android:layout_height="67.5dp"
                android:background="@drawable/btn_purple_top_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_czc_launcher"
                android:layout_width="114dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_purple_top_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_translate_launcher"
                android:layout_width="114.5dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_purple_bottom_small"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_seek_help_launcher"
                android:layout_width="146dp"
                android:layout_height="67.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_purple_bottom_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_ip_image"
            android:layout_width="162.5dp"
            android:layout_height="215dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="91.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ip_img"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_ar_launcher2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_answer_launcher"
                android:layout_width="147dp"
                android:layout_height="67.5dp"
                android:background="@drawable/btn_blue_top_big"
                android:paddingStart="21.5dp"
                android:paddingTop="12.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />


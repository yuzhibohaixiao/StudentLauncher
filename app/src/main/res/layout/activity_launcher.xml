<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg_new">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_launcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="122dp" />

    <ImageView
        android:id="@+id/iv_call_parent_child"
        android:layout_width="71dp"
        android:layout_height="77.5dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/call_parent_child"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_student_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_call_parent"
                android:layout_width="135dp"
                android:layout_height="57dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/launcher_top_call_parent" />

            <ImageView
                android:id="@+id/iv_study_plan"
                android:layout_width="135dp"
                android:layout_height="57dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/launcher_top_study_plan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_child_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_main_top_child_launcher"
                android:layout_width="71dp"
                android:layout_height="77.5dp"
                android:src="@drawable/main_top_child_launcher" />

            <ImageView
                android:id="@+id/iv_app_select_top_child_launcher"
                android:layout_width="71dp"
                android:layout_height="77.5dp"
                android:layout_marginStart="@dimen/dp_40"
                android:alpha="0.6"
                android:src="@drawable/app_select_top_child_launcher" />

            <ImageView
                android:id="@+id/iv_app_list_top_child_launcher"
                android:layout_width="71dp"
                android:layout_height="77.5dp"
                android:layout_marginStart="@dimen/dp_40"
                android:alpha="0.6"
                android:src="@drawable/app_list_top_child_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="27.5dp"
            android:layout_marginEnd="45dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_wifi_module"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="19.5dp">

                <ImageView
                    android:id="@+id/iv_wifi_module"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/wifi_connect_big" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_user_icon_new_launcher"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/splash_boy" />

            <TextView
                android:id="@+id/tv_user_name_new_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_student_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86.5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_width="157.5dp"
                android:layout_height="385dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/launcher_left_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ar_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AR学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_english_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="英语"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:background="@color/black" />


                <TextView
                    android:id="@+id/tv_mathematics_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_chinese_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="语文"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_quality_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="素质拓展"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ar_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ar_launcher_left"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_english_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/english_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_mathematics_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="145dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mathematics_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_chinese_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="230dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chinese_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_quality_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quality_development_launcher_left"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_ar_launcher"
            android:layout_width="665dp"
            android:layout_height="385dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/launcher_ar_bg"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_oral_correction"
                android:layout_width="155dp"
                android:layout_height="227dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="19.5dp"
                android:src="@drawable/oral_correction" />

            <ImageView
                android:id="@+id/iv_article_correction"
                android:layout_width="155dp"
                android:layout_height="227dp"
                android:layout_alignTop="@id/iv_oral_correction"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_oral_correction"
                android:src="@drawable/article_correction" />

            <ImageView
                android:id="@+id/iv_query_word"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_alignTop="@id/iv_oral_correction"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_article_correction"
                android:src="@drawable/query_word" />

            <ImageView
                android:id="@+id/iv_english_translation"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_below="@id/iv_query_word"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iv_article_correction"
                android:src="@drawable/english_translation" />

            <ImageView
                android:id="@+id/iv_favorites"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_alignTop="@id/iv_oral_correction"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_query_word"
                android:src="@drawable/favorites" />

            <ImageView
                android:id="@+id/iv_title_query"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_below="@id/iv_oral_correction"
                android:layout_alignStart="@id/iv_oral_correction"
                android:layout_marginTop="10dp"
                android:src="@drawable/title_query" />

            <ImageView
                android:id="@+id/iv_book_reading"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_alignStart="@id/iv_article_correction"
                android:layout_alignTop="@id/iv_title_query"
                android:layout_toEndOf="@id/iv_title_query"
                android:src="@drawable/book_reading" />

            <ImageView
                android:id="@+id/iv_chinese_words"
                android:layout_width="155dp"
                android:layout_height="107.5dp"
                android:layout_alignStart="@id/iv_query_word"
                android:layout_alignTop="@id/iv_title_query"
                android:layout_toEndOf="@id/iv_book_reading"
                android:src="@drawable/chinese_words" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_ip_image"
            android:layout_width="175.5dp"
            android:layout_height="232dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="17.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ip_img" />

        <ViewStub
            android:id="@+id/vs_center_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="224dp"
            android:layout_marginEnd="18dp"
            android:inflatedId="@+id/vsi_center_launcher"
            android:layout="@layout/view_stub_center_launcher"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quality_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp" />

    </FrameLayout>
</FrameLayout>
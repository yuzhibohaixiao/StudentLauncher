<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg_new">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_call_parent"
                android:layout_width="135dp"
                android:layout_height="57dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/launcher_top_call_parent" />

            <ImageView
                android:id="@+id/iv_study_plan"
                android:layout_width="135dp"
                android:layout_height="57dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/launcher_top_study_plan" />
        </LinearLayout>

        <ImageView
            android:layout_width="87.5dp"
            android:layout_height="77dp"
            android:layout_marginStart="23.5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/top_ip_img"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_study_plan_launcher"
            android:layout_width="300dp"
            android:layout_height="37.5dp"
            android:layout_marginStart="14.5dp"
            android:layout_marginBottom="24.5dp"
            android:background="@drawable/new_launcher_top_text_bg"
            android:gravity="center"
            android:text="今天暂无学习计划，快去创建学习计划吧！"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_task_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="169.5dp"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/task"
            android:drawablePadding="3dp"
            android:text="任务挑战"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dialog_launcher"
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_marginStart="31.5dp"
            android:background="@drawable/white_bg_oval"
            android:gravity="center"
            android:text="一年级上      ▼"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="27.5dp"
            android:layout_marginEnd="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_icon_new_launcher"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="27.5dp"
                android:src="@drawable/splash_boy" />

            <TextView
                android:id="@+id/tv_user_name_new_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86.5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_width="157.5dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/launcher_left_bg"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_ar_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AR学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_english_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="英语"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_mathematics_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数学"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_chinese_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="语文"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_quality_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="素质拓展"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ar_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ar_launcher_left"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_english_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="65dp"
                android:scaleType="centerCrop"
                android:src="@drawable/english_launcher_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_mathematics_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="135dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mathematics_launcher_left"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_chinese_launcher"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_marginTop="205dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chinese_launcher_left"

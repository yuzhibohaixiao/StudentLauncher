<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_bg"
    android:orientation="vertical"
    tools:context=".LauncherActivity">

    <ImageView
        android:id="@+id/iv_video_launcher"
        android:layout_width="255dp"
        android:layout_height="180dp"
        android:layout_marginStart="48.5dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/launcher_video" />

    <ImageView
        android:id="@+id/iv_game_launcher"
        android:layout_width="255dp"
        android:layout_height="180dp"
        android:layout_alignTop="@id/iv_video_launcher"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@id/iv_video_launcher"
        android:src="@drawable/launcher_game" />

    <ImageView
        android:id="@+id/iv_other_launcher"
        android:layout_width="255dp"
        android:layout_height="180dp"
        android:layout_below="@id/iv_video_launcher"
        android:layout_alignStart="@id/iv_video_launcher"
        android:layout_marginTop="46dp"
        android:src="@drawable/launcher_other" />

    <ImageView
        android:id="@+id/iv_education_launcher"
        android:layout_width="255dp"
        android:layout_height="180dp"
        android:layout_alignStart="@id/iv_game_launcher"
        android:layout_alignTop="@id/iv_other_launcher"
        android:src="@drawable/launcher_education" />

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="394dp"
        android:layout_alignTop="@id/iv_video_launcher"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@id/iv_education_launcher"
        android:background="@drawable/launcher_weather_clock"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="12:12"
                android:textColor="#ffffffff"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/tv_month_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="3月25日 周四"
                android:textColor="#ffffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_year_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="2021年"
                android:textColor="#ffffffff"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_temperature_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="9dp"
            android:text="24°C"
            android:textColor="@color/white"
            android:textSize="70sp" />

        <ImageView
            android:id="@+id/iv_weather_launcher"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/sunny" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:src="@drawable/launcher_setting" />

        <ImageView
            android:id="@+id/iv_app_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:src="@drawable/launcher_app_store" />
    </LinearLayout>

</RelativeLayout>
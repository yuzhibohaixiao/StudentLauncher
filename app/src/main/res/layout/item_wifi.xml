<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_wifi_connecting"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/wifi_connecting"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_wifi_tick"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/tick"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="buaasp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wifi_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7.5dp"
            android:text="连接中……"
            android:textColor="@color/person_center_text_green"
            android:textSize="7sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_wifi_lock_item"
            android:layout_width="10.5dp"
            android:layout_height="12.5dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/lock"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_wifi_signal_item"
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_marginEnd="15.5dp"
            android:src="@drawable/wifi_connect_big" />

    </LinearLayout>

    <View
        android:id="@+id/view_wifi_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/person_center_text_green"
        android:visibility="gone" />
</FrameLayout>
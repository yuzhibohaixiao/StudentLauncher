<?xml version="1.0"encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dp" />

            <gradient

                android:angle="0"

                android:centerColor="#B4BBBC"

                android:centerY="0"

                android:endColor="#B4BBBC"

                android:startColor="#B4BBBC" />

        </shape>
    </item>

    <!--类似于视频缓冲未播放状态时的进度颜色-->

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="5dp" />

                <gradient

                    android:angle="0"

                    android:centerY="0"

                    android:endColor="#5183E9"

                    android:startColor="#5183E9" />

            </shape>

        </clip>

    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dp" />

                <gradient

                    android:angle="0"

                    android:endColor="#5183E9"

                    android:startColor="#5183E9" />

            </shape>

        </clip>

    </item>
</layer-list>